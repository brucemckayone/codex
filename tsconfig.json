{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ESNext", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@codex/database": ["packages/database/src/index.ts"],
      "@codex/database/*": ["packages/database/src/*"],
      "@codex/validation": ["packages/validation/src/index.ts"],
      "@codex/validation/*": ["packages/validation/src/*"],
      "@codex/cloudflare-clients": ["packages/cloudflare-clients/src/index.ts"],
      "@codex/cloudflare-clients/*": ["packages/cloudflare-clients/src/*"],
      "@codex/core-services": ["packages/core-services/src/index.ts"],
      "@codex/core-services/*": ["packages/core-services/src/*"],
      "@codex/auth": ["packages/auth/src/index.ts"],
      "@codex/auth/*": ["packages/auth/src/*"],
      "@codex/notifications": ["packages/notifications/src/index.ts"],
      "@codex/notifications/*": ["packages/notifications/src/*"],
      "@codex/test-utils": ["packages/test-utils/src/index.ts"],
      "@codex/test-utils/*": ["packages/test-utils/src/*"]
    }
  },
  "include": ["workers/**/*", "apps/**/*", "packages/**/*"],
  "exclude": ["node_modules", "dist", "**/.svelte-kit"]
}
