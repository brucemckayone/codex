{
  "$schema": "https://json.schemastore.org/tsconfig",
  "files": [],
  "references": [
    { "path": "./packages/access" },
    { "path": "./packages/database" },
    { "path": "./packages/validation" },
    { "path": "./packages/observability" },
    { "path": "./packages/cloudflare-clients" },
    { "path": "./packages/security" },
    { "path": "./packages/test-utils" },
    { "path": "./packages/content" },
    { "path": "./packages/organization" },
    { "path": "./packages/worker-utils" },
    { "path": "./packages/service-errors" },
    { "path": "./packages/shared-types" },
    { "path": "./packages/purchase" },
    { "path": "./workers/auth" },
    { "path": "./workers/content-api" },
    { "path": "./workers/identity-api" },
    { "path": "./workers/organization-api" },
    { "path": "./workers/notifications-api" },
    { "path": "./workers/ecom-api" },
    { "path": "./workers/admin-api" },
    { "path": "./packages/identity" },
    { "path": "./packages/image-processing" }
  ],
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022", "DOM"],
    "types": ["@cloudflare/vitest-pool-workers"],
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@codex/access": ["packages/access/src/index.ts"],
      "@codex/access/*": ["packages/access/src/*"],
      "@codex/database": ["packages/database/src/index.ts"],
      "@codex/database/*": ["packages/database/src/*"],
      "@codex/validation": ["packages/validation/src/index.ts"],
      "@codex/validation/*": ["packages/validation/src/*"],
      "@codex/observability": ["packages/observability/src/index.ts"],
      "@codex/observability/*": ["packages/observability/src/*"],
      "@codex/cloudflare-clients": ["packages/cloudflare-clients/src/index.ts"],
      "@codex/cloudflare-clients/*": ["packages/cloudflare-clients/src/*"],
      "@codex/security": ["packages/security/src/index.ts"],
      "@codex/security/*": ["packages/security/src/*"],
      "@codex/test-utils": ["packages/test-utils/src/index.ts"],
      "@codex/test-utils/*": ["packages/test-utils/src/*"],
      "@codex/content": ["packages/content/src/index.ts"],
      "@codex/content/*": ["packages/content/src/*"],
      "@codex/organization": ["packages/organization/src/index.ts"],
      "@codex/organization/*": ["packages/organization/src/*"],
      "@codex/worker-utils": ["packages/worker-utils/src/index.ts"],
      "@codex/worker-utils/*": ["packages/worker-utils/src/*"],
      "@codex/service-errors": ["packages/service-errors/src/index.ts"],
      "@codex/service-errors/*": ["packages/service-errors/src/*"],
      "@codex/shared-types": ["packages/shared-types/src/index.ts"],
      "@codex/shared-types/*": ["packages/shared-types/src/*"],
      "@codex/admin": ["packages/admin/src/index.ts"],
      "@codex/admin/*": ["packages/admin/src/*"],
      "@codex/identity": ["packages/identity/src/index.ts"],
      "@codex/identity/*": ["packages/identity/src/*"],
      "@codex/image-processing": ["packages/image-processing/src/index.ts"],
      "@codex/image-processing/*": ["packages/image-processing/src/*"]
    }
  }
}
