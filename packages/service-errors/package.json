{
  "name": "@codex/service-errors",
  "version": "1.0.0",
  "description": "Shared error classes and error handling utilities for Codex services",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "vite build --config vite.config.service-errors",
    "dev": "vite build --config vite.config.service-errors --watch",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "codex",
    "errors",
    "service-layer"
  ],
  "dependencies": {
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "typescript": "^5.7.3",
    "vite": "^7.2.2",
    "vite-plugin-dts": "^4.5.4"
  }
}
