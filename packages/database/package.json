{
  "name": "@codex/database",
  "version": "0.1.0",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./schema": {
      "types": "./dist/schema/index.d.ts",
      "default": "./dist/schema/index.js"
    }
  },
  "scripts": {
    "build": "vite build --config vite.config.database",
    "dev": "vite build --config vite.config.database --watch",
    "db:gen:drizzle": "drizzle-kit generate --config ./src/config/drizzle.config.ts",
    "db:gen:auth": "dotenv -e ../../.env.dev -- npx @better-auth/cli generate --config ./src/auth.ts --output ./src/migrations",
    "db:gen": "pnpm db:gen:drizzle && pnpm db:gen:auth",
    "db:migrate": "pnpm exec tsx scripts/migrate.ts",
    "db:studio": "pnpm exec tsx scripts/db-commands.ts studio",
    "db:push": "pnpm exec tsx scripts/db-commands.ts push",
    "db:generate": "pnpm exec tsx scripts/db-commands.ts generate",
    "test": "vitest run --config vitest.config.database.ts",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "biome lint --write .",
    "format": "biome format --write .",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@neondatabase/serverless": "^0.10.4",
    "better-auth": "^1.3.34",
    "dotenv": "^17.2.3",
    "drizzle-orm": "0.44.7",
    "node-fetch": "^3.3.2",
    "uuid": "^9.0.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@better-auth/cli": "^1.3.34",
    "@types/node": "^22.0.0",
    "@types/node-fetch": "^2.6.11",
    "@types/ws": "^8.18.1",
    "drizzle-kit": "^0.31.6",
    "neon-testing": "^2.2.0",
    "tsx": "^4.20.6",
    "typescript": "^5.6.3",
    "vite": "^7.2.2",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^4.0.2"
  }
}
