{
  "name": "@codex/database",
  "version": "0.1.0",
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "scripts": {
    "db:gen:drizzle": "drizzle-kit generate --config ./src/config/drizzle.config.ts",
    "db:gen:auth": "dotenv -e ../../.env.dev -- npx @better-auth/cli generate --config ./src/auth.ts --output ./src/migrations",
    "db:gen": "pnpm db:gen:drizzle && pnpm db:gen:auth",
    "db:migrate": "drizzle-kit migrate --config ./src/config/drizzle.config.ts",
    "db:studio": "drizzle-kit studio",
    "db:push": "drizzle-kit push",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@neondatabase/serverless": "^0.10.4",
    "better-auth": "^1.3.34",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.36.4",
    "node-fetch": "^3.3.2",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@better-auth/cli": "^1.3.34",
    "@types/node": "^22.0.0",
    "@types/node-fetch": "^2.6.11",
    "@types/ws": "^8.18.1",
    "drizzle-kit": "^0.29.1",
    "tsx": "^4.20.6",
    "typescript": "^5.6.3",
    "vitest": "^4.0.2",
    "ws": "^8.18.3"
  }
}
