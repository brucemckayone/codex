{
  "name": "@codex/worker-utils",
  "version": "1.0.0",
  "description": "Shared utilities and factories for Cloudflare Workers",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "vite build --config vite.config.worker-utils",
    "dev": "vite build --config vite.config.worker-utils --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest run --config vitest.config.worker-utils.ts",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "biome lint --write .",
    "format": "biome format --write ."
  },
  "keywords": [
    "codex",
    "cloudflare-workers",
    "hono",
    "utilities"
  ],
  "dependencies": {
    "@codex/access": "workspace:*",
    "@codex/admin": "workspace:*",
    "@codex/cloudflare-clients": "workspace:*",
    "@codex/organization": "workspace:*",
    "@codex/content": "workspace:*",
    "@codex/database": "workspace:*",
    "@codex/notifications": "workspace:*",
    "@codex/observability": "workspace:*",
    "@codex/platform-settings": "workspace:*",
    "@codex/purchase": "workspace:*",
    "@codex/security": "workspace:*",
    "@codex/service-errors": "workspace:*",
    "@codex/shared-types": "workspace:*",
    "@codex/validation": "workspace:*",
    "drizzle-orm": "0.44.7",
    "hono": "^4.7.8",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250102.0",
    "typescript": "^5.7.3",
    "vite": "^7.2.2"
  }
}
