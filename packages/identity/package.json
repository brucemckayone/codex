{
  "name": "@codex/identity",
  "version": "1.0.0",
  "description": "Identity and user profile management service",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "vite build --config vite.config.identity.ts",
    "dev": "vite build --config vite.config.identity.ts --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest run --config vitest.config.identity.ts",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "biome lint --write .",
    "format": "biome format --write ."
  },
  "dependencies": {
    "@codex/database": "workspace:*",
    "@codex/image-processing": "workspace:*",
    "@codex/service-errors": "workspace:*",
    "@codex/shared-types": "workspace:*",
    "@codex/validation": "workspace:*",
    "drizzle-orm": "0.44.7"
  },
  "devDependencies": {
    "@codex/test-utils": "workspace:*",
    "@types/node": "^22.0.0",
    "typescript": "^5.6.3",
    "vite": "^7.2.2",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^4.0.2"
  }
}
