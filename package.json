{
  "name": "Codex",
  "private": true,
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "docker:up": "docker-compose -f infrastructure/neon/docker-compose.dev.local.yml --env-file .env.dev up -d",
    "docker:up:ephemeral": "docker-compose -f infrastructure/neon/docker-compose.dev.ephemeral.yml --env-file .env.dev up -d",
    "docker:down": "docker-compose -f infrastructure/neon/docker-compose.dev.local.yml down",
    "docker:down:ephemeral": "docker-compose -f infrastructure/neon/docker-compose.dev.ephemeral.yml down",
    "dev:web": "pnpm --filter web dev",
    "dev:stripe-webhook-handler": "pnpm --filter stripe-webhook-handler dev",
    "dev:auth": "pnpm --filter auth dev",
    "dev": "concurrently \"pnpm docker:up && wait-on tcp:4444 && pnpm dev:web\" \"pnpm dev:stripe-webhook-handler\" \"pnpm dev:auth\"",
    "dev:full": "bash scripts/dev-full-stack.sh",
    "dev:build": "pnpm build:packages && pnpm build:workers",
    "dev:clean": "pnpm docker:down && rm -rf node_modules/.cache && rm -rf apps/*/dist && rm -rf workers/*/dist && rm -rf packages/*/dist",
    "stop": "pnpm docker:down",
    "build:workers": "pnpm -r --filter './workers/*' build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:web": "pnpm --filter web test",
    "test:packages": "pnpm -r --filter './packages/*' test",
    "test:e2e": "pnpm --filter web test:e2e",
    "test:e2e:ui": "pnpm --filter web test:e2e:ui",
    "test:all": "pnpm test && pnpm test:e2e",
    "test:all:coverage": "pnpm test:coverage && pnpm test:e2e",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "act:list": "act -l",
    "act:test": "act -j test",
    "act:test:verbose": "act -j test --verbose",
    "act:dry": "act -n",
    "db:gen": "cd packages/database && npx drizzle-kit generate --config ./src/config/drizzle.config.ts",
    "db:push": "cd packages/database && npx drizzle-kit push --config ./src/config/drizzle.config.ts",
    "neon:create": "pnpm --filter @codex/database neon:create",
    "neon:list": "pnpm --filter @codex/database neon:list",
    "neon:delete": "pnpm --filter @codex/database neon:delete",
    "neon:cleanup": "pnpm --filter @codex/database neon:cleanup",
    "test:neon": "DB_METHOD=BRANCH pnpm test",
    "test:neon:watch": "DB_METHOD=BRANCH pnpm test:watch",
    "prepare": "husky",
    "build:packages": "pnpm -r run build"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.10.0",
    "@eslint/js": "^9.38.0",
    "@playwright/test": "^1.56.1",
    "@sveltejs/mcp": "^0.1.9",
    "@sveltejs/vite-plugin-svelte": "^5.1.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/svelte": "^5.2.8",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@vitest/coverage-v8": "^4.0.2",
    "@vitest/ui": "^4.0.2",
    "concurrently": "^7.0.0",
    "dotenv": "^17.2.3",
    "dotenv-cli": "^11.0.0",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-svelte": "^3.12.5",
    "eslint-plugin-vitest": "^0.5.4",
    "globals": "^15.9.0",
    "happy-dom": "^20.0.8",
    "husky": "^9.1.7",
    "jsdom": "^27.0.1",
    "lint-staged": "^16.2.6",
    "miniflare": "^4.20251008.0",
    "pnpm": "^8.0.0",
    "prettier": "^3.6.2",
    "prettier-plugin-svelte": "^3.4.0",
    "svelte": "^5.41.2",
    "svelte-eslint-parser": "^1.4.0",
    "tsx": "^4.20.6",
    "typescript": "^5.7.3",
    "vite": "^6.4.1",
    "vitest": "^4.0.2",
    "wait-on": "^9.0.1",
    "wrangler": "^4.45.0",
    "@cloudflare/workers-types": "^4.20250129.0"
  },
  "workspaces": [
    "apps/*",
    "workers/*",
    "packages/*"
  ],
  "keywords": [],
  "author": "",
  "license": "ISC",
  "lint-staged": {
    "*.{js,ts,svelte,json,md}": "prettier --write"
  },
  "packageManager": "pnpm@10.18.3",
  "dependencies": {
    "@opentelemetry/api": "^1.9.0",
    "mysql2": "^3.15.3"
  }
}
