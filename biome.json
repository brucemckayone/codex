{
  "$schema": "https://biomejs.dev/schemas/2.3.7/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "assist": { "actions": { "source": { "organizeImports": "on" } } },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noExplicitAny": "warn"
      },
      "style": {
        "useConst": "error"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingCommas": "es5",
      "semicolons": "always",
      "arrowParentheses": "always"
    }
  },
  "html": {
    "experimentalFullSupportEnabled": true,
    "formatter": {
      "indentScriptAndStyle": false
    }
  },
  "css": {
    "parser": {
      "cssModules": true
    }
  },
  "files": {
    "includes": [
      "**/packages/**/*.{ts,js,json}",
      "**/workers/**/*.{ts,js,json}",
      "**/apps/**/*.{ts,js,svelte,json}",
      "**/config/**/*.{ts,js,json}",
      "**/*.{ts,js,json}",
      "!**/.obsidian",
      "!**/.obsidian",
      "!**/node_modules",
      "!**/dist",
      "!**/.wrangler",
      "!**/build",
      "!**/.svelte-kit",
      "!**/coverage",
      "!**/*.d.ts",
      "!**/pnpm-lock.yaml",
      "!**/package-lock.json",
      "!**/.turbo",
      "!**/migrations/meta",
      "!**/.venv*",
      "!**/test-media",
      "!**/src/paraglide"
    ]
  },
  "overrides": [
    {
      "includes": ["**/*.svelte"],
      "linter": {
        "enabled": false
      }
    }
  ]
}
