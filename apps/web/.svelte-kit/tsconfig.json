{
	"compilerOptions": {
		"paths": {
			"$lib": [
				"../src/lib"
			],
			"$lib/*": [
				"../src/lib/*"
			],
			"@codex/database": [
				"../../../packages/database/src"
			],
			"@codex/database/*": [
				"../../../packages/database/src/*"
			],
			"@codex/validation": [
				"../../../packages/validation/src"
			],
			"@codex/validation/*": [
				"../../../packages/validation/src/*"
			],
			"@codex/cloudflare-clients": [
				"../../../packages/cloudflare-clients/src"
			],
			"@codex/cloudflare-clients/*": [
				"../../../packages/cloudflare-clients/src/*"
			],
			"@codex/core-services": [
				"../../../packages/core-services/src"
			],
			"@codex/core-services/*": [
				"../../../packages/core-services/src/*"
			],
			"@codex/auth": [
				"../../../packages/auth/src"
			],
			"@codex/auth/*": [
				"../../../packages/auth/src/*"
			],
			"@codex/notifications": [
				"../../../packages/notifications/src"
			],
			"@codex/notifications/*": [
				"../../../packages/notifications/src/*"
			],
			"$app/types": [
				"./types/index.d.ts"
			]
		},
		"rootDirs": [
			"..",
			"./types"
		],
		"verbatimModuleSyntax": true,
		"isolatedModules": true,
		"lib": [
			"esnext",
			"DOM",
			"DOM.Iterable"
		],
		"moduleResolution": "bundler",
		"module": "esnext",
		"noEmit": true,
		"target": "esnext"
	},
	"include": [
		"ambient.d.ts",
		"non-ambient.d.ts",
		"./types/**/$types.d.ts",
		"../vite.config.js",
		"../vite.config.ts",
		"../src/**/*.js",
		"../src/**/*.ts",
		"../src/**/*.svelte",
		"../tests/**/*.js",
		"../tests/**/*.ts",
		"../tests/**/*.svelte"
	],
	"exclude": [
		"../node_modules/**",
		"../src/service-worker.js",
		"../src/service-worker/**/*.js",
		"../src/service-worker.ts",
		"../src/service-worker/**/*.ts",
		"../src/service-worker.d.ts",
		"../src/service-worker/**/*.d.ts"
	]
}