{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".svelte-kit/**", "build/**"],
      "cache": true
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["^build"],
      "cache": true,
      "outputs": ["coverage/**"],
      "env": [
        "DATABASE_URL",
        "DB_METHOD",
        "NODE_ENV",
        "CI",
        "NEON_API_KEY",
        "NEON_PROJECT_ID",
        "NEON_PARENT_BRANCH_ID"
      ]
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "test:coverage": {
      "dependsOn": ["^build"],
      "cache": true,
      "outputs": ["coverage/**"]
    },
    "test:e2e": {
      "dependsOn": ["^build"],
      "cache": false,
      "env": ["DATABASE_URL", "DB_METHOD", "PLAYWRIGHT_BASE_URL", "CI"]
    },
    "test:e2e:ui": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "cache": true
    },
    "format": {
      "cache": true
    },
    "format:check": {
      "cache": true
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "cache": true
    },
    "check": {
      "cache": true
    }
  }
}
